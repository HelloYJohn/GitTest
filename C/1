#include <stdio.h>

typedef unsigned char byte;
void print_byte(byte* num, int len)
{
	int i;
	for(i = 0; i < len; i++)
	{
		printf("%.2X ", num[i]);
	}
	printf("\n");
}

int main()
{
	unsigned short sx = 12345;
	short usx = sx;
	int x = sx;
	unsigned ux = sx;
	printf("sx: %d\n", sx);
	print_byte((byte*)&sx, sizeof(sx));
	printf("usx: %u\n", usx);
	print_byte((byte*)&usx, sizeof(usx));
	printf("x: %d\n", x);
	print_byte((byte*)&x, sizeof(x));
	printf("ux: %u\n", ux);
	print_byte((byte*)&sx, sizeof(ux));
	return 0;
}
